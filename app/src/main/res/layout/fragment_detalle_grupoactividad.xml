<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BCBFBF"
    tools:context=".ui.home.MisGruposActivos.DetalleGrupoActividad">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#BCBFBF">

    <EditText
        android:id="@+id/etNombreActividad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:backgroundTint="#030515"
        android:ems="10"
        android:enabled="false"
        android:gravity="center_horizontal|left"
        android:hint="Nombre del Grupo"
        android:inputType="text"

        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/etTema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:backgroundTint="#030515"
        android:ems="10"
        android:enabled="false"
        android:gravity="center_horizontal|left"
        android:hint="Ultimo tema"
        android:inputType="text"

        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/etProximaReunion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:backgroundTint="#030515"
        android:enabled="false"
        android:gravity="center_horizontal|left"
        android:hint="Próximo encuentro"
        android:inputType="text"

        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/etEncargado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:backgroundTint="#030515"
        android:ems="10"
        android:enabled="false"
        android:gravity="center_horizontal|left"
        android:hint="Encargado"
        android:inputType="text"

        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="14sp" />


    <Spinner
        android:id="@+id/spCompanieros"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="10sp"
        android:backgroundTint="#E30C7E"
        android:gravity="center_horizontal|left"
        android:hint="Compañeros"
                />

    <Button
        android:id="@+id/btnVerAvisos"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:background="@color/design_default_color_on_secondary"
        android:gravity="center_horizontal|left"
        android:text="Ver AVISOS"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_background" />

    <EditText
        android:id="@+id/etMensajeAvisos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#1A237E"
        android:layout_marginTop="10sp" android:ems="10"
        android:enabled="false"
        android:gravity="center_horizontal|left"
        android:inputType="text"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:text="NO hay AVISOS"
        />

    <Button
        android:id="@+id/btnDejarGrupo"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:background="#7E7F8A"
        android:gravity="center_horizontal|left"
        android:text="Abandonar Grupo"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_error" />
</LinearLayout>
</ScrollView>
